<settings>
   <category label="Addon-Settings">
  	<setting id="use-hd" type="bool" label="Enable HD" default="true"/>
    <setting id="region" type="enum" values="Amsterdam(Free)|Washington(Premium)|Los Angeles(Premium)|Frankfurt(Premium)" label="Region" default="0" enable="true" />
   </category>
   <category label="Login">
  <setting id="Username" type="text" label="Username" default="" visible="true"/>
  <setting id="Password" type="text" label="Password" default="" visible="true" option="hidden" />
   </category>
<category label="Auto-View">
  <setting id="auto-view" type="bool"   label="Enable Automatic View" default="false"/>
  <setting id="default-view"   type="number" label="Default"               default="50"   enable="!eq(-1,false)"/>
  <setting id="movies-view"    type="number" label="Movies"                default="515"  enable="!eq(-2,false)"/>
  <setting id="tvshows-view"   type="number" label="TV Shows"              default="515"  enable="!eq(-3,false)"/>
  <setting id="season-view"    type="number" label="Seasons"               default="50"   enable="!eq(-4,false)"/>
  <setting id="episode-view"   type="number" label="Episodes"              default="515"  enable="!eq(-5,false)"/>
  <setting id="links-view"   	 type="number" label="Links"              	 default="50"   enable="!eq(-6,false)"/>
  <setting id="ga_time" type="text" label="GA Called" default="2000-01-01 00:00:00" visible="false"/>
  <setting id="authcode" type="text" label="authcode" default="" visible="false"/>
  <setting id="ga_visitor" type="text" label="GA visitor" default="" visible="false"/>
</category>
</settings>